<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <hryvinskyi_seo>
            <robots>
                <enabled>1</enabled>
                <meta_robots><![CDATA[{
	"r1": {
		"pattern": "*?*",
		"meta_directives": ["index","follow"],
		"priority": "0"
	},
	"r3": {
		"pattern": "*catalog\/product\/view\/id*",
		"meta_directives": ["index","follow"],
		"priority": "0"
	},
	"r4": {
		"pattern": "*catalogsearch/*",
		"meta_directives": ["index","follow"],
		"priority": "0"
	},
	"r5": {
		"pattern": "*customer\/account*",
		"meta_directives": ["index","follow"],
		"priority": "0"
	},
	"r6": {
		"pattern": "*review\/product\/list*",
		"meta_directives": ["index","follow"],
		"priority": "0"
	}
}]]></meta_robots>
                <no_route_robots_types><![CDATA[["noindex","nofollow"]]]></no_route_robots_types>
                <paginated_robots>1</paginated_robots>
                <paginated_robots_type><![CDATA[["index","follow"]]]></paginated_robots_type>
                <robots_xheader_enabled>1</robots_xheader_enabled>
            </robots>
        </hryvinskyi_seo>
    </default>
</config>
